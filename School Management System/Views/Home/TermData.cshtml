@model List<Term>

@{
    ViewData["Title"] = "Term Table";
}
<div class="row align-items-center justify-content-center">

    <h1 class=" text-center text-info ">Term Data</h1>
</div>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Trm_id</td>
                <td>@student.StartDate</td>
                <td>@student.EndDate</td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="EditTerm" asp-route-id="@student.Trm_id">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="DeleteTerm" asp-route-id="@student.Trm_id" onclick="return confirm('Are you sure you want to delete this Term?');">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Home" asp-action="Term">Add Term</a>

