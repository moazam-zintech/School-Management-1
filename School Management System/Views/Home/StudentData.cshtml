@model List<Student>

@{
    ViewData["Title"] = "Student Table";
}
<div class="row align-items-center justify-content-center">

    <h1 class=" text-center text-info ">Student Data</h1>
</div>
<br />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Std_id</td>
                    <td>@student.Std_Name</td>
                    <td>@student.Std_Gender</td>
                    <td>@student.Std_Age</td>
                    <td><a class="btn btn-link" asp-controller="Home" asp-action="EditStudent" asp-route-id="@student.Std_id">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="DeleteStudent" asp-route-id="@student.Std_id" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Student">Add Student</a>

