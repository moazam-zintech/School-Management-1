@model List<Teacher>

@{
    ViewData["Title"] = "Teacher Table";
}
<div class="row align-items-center justify-content-center">

    <h1 class=" text-center text-info ">Teachers Data</h1>
</div>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Joining</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.T_id</td>
                <td>@teacher.Teacher_Name</td>
                <td>@teacher.Email</td>
                <td>@teacher.Date_of_joining</td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="EditTeacher" asp-route-id="@teacher.T_id">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="DeleteTeacher" asp-route-id="@teacher.T_id" onclick="return confirm('Are you sure you want to delete this Teacher?');">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Home" asp-action="Teacher">Add</a>

