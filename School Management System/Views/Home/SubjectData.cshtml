@model List<Subject>

@{
    ViewData["Title"] = "Subject Table";
}
<div class="row align-items-center justify-content-center">

    <h1 class=" text-center text-info ">Subject Data</h1>
</div>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sbj in Model)
        {
            <tr>
                <td>@sbj.Sbj_id</td>
                <td>@sbj.Sbj_Name</td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="EditSubject" asp-route-id="@sbj.Sbj_id">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="DeleteSubject" asp-route-id="@sbj.Sbj_id" onclick="return confirm('Are you sure you want to delete this Subject?');">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Home" asp-action="Subject">Add Subject</a>

