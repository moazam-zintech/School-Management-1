@model List<Grade>

@{
    ViewData["Title"] = "Grade Table";
}
<div class="row align-items-center justify-content-center">

    <h1 class=" text-center text-info ">Grades Data</h1>
</div>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Grd_id</td>
                <td>@student.Grd_Type</td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="EditGrade" asp-route-id="@student.Grd_id">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="Home" asp-action="DeleteGrade" asp-route-id="@student.Grd_id" onclick="return confirm('Are you sure you want to delete this Grade?');">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Home" asp-action="Grades">Add Grades</a>

